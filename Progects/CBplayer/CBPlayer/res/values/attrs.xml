<?xml version="1.0" encoding="utf-8"?>
<resources>
      <declare-styleable name="cbprogressbar"> 
        <!-- 进度百分比文字大小 -->
        <attr name="percent_text_size" format="integer|dimension"/> 
        <!-- 进度百分比文字颜色 -->
        <attr name="percent_text_color" format="reference|color|integer"/> 
        <!-- 进度条背景颜色 -->
        <attr name="progressBarBgColor" format="reference|color|integer"/>
          <!-- 进度颜色 -->
        <attr name="progress_color" format="reference|color|integer"/> 
         <!-- 圆形进度条边框大小 -->
        <attr name="stroke_width" format="integer|dimension"/> 
         <!-- 矩形进度条 四周圆角大小 -->
        <attr name="rect_round" format="integer|dimension"/> 
        <!-- 进度条样式圆形还是矩形 -->
        <attr name="orientation">
            <enum name="horizontal" value="0"/>
            <enum name="round" value="1"/>
        </attr> 
        <!-- 矩形进度条 是空心样式还是实心样式 -->
        <attr name="isHorizonStroke" format="boolean"/> 
        <!-- 进度文字是否显示百分号 -->
        <attr name="showPercentSign" format="boolean"/> 
    </declare-styleable> 
</resources>
